<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <!-- Can even change system colors if we want to -->
        <item name="android:navigationBarColor">@color/blue_700</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowTranslucentNavigation">false</item>
    </style>


    <!-- added this trying to avoid the Navbar to overlap the list or chart -->
    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryDark">@color/blue_700</item>
        <item name="colorAccent">@color/cyan_200</item>

        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
        <item name="android:windowTranslucentNavigation">false</item>

        <item name="android:windowBackground">@color/window_background</item>
    </style>


</resources>
